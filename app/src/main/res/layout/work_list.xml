<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/track_wrapper"
    android:background="@drawable/ripple_effect"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/workPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="ID"
                    android:text="Job name"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/companyWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textColor="@color/material_grey700" />

                <TextView
                    android:id="@+id/dateWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12/04/2012 to now"
                    android:textColor="@color/material_grey700" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/startDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="start_date" />

                        <TextView
                            android:id="@+id/endDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="ended_date" />

                        <TextView
                            android:id="@+id/currentWork"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="current_work" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:background="#14292929"
            android:layout_height="1dp" />
    </LinearLayout>

</LinearLayout>