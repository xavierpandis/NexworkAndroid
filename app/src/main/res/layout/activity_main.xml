<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cjx.nexwork.activities.MainActivity">

    <TextView
        android:id="@+id/accessToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access Token" />

    <TextView
        android:id="@+id/expireTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accessToken"
        android:text="Time" />

    <Button
        android:id="@+id/btnStudies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/expireTime"
        android:text="View studies" />

    <Button
        android:id="@+id/btnUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View your profile"
        android:layout_below="@+id/btnStudies"
        android:layout_alignParentStart="true" />

</RelativeLayout>

