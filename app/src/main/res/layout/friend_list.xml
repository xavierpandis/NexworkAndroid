<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_wrapper"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/relfriendimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageFriend"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/default_user_image" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relfriendname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Javier Bono"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relfriendname"
        android:background="#14292929"
        android:elevation="3dp" />

</RelativeLayout>